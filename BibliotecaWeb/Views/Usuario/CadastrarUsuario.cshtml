@model Usuario

<form asp-action="CadastrarUsuario" asp-controller="Usuario" method="post">
    <fieldset>
        <legend>Cadastrar usuário</legend>

        <div asp-validation-summary="ModelOnly"></div>

        <div class="form-group">
            <label asp-for="UserName">Nome de usuário:</label>
            <input class="form-control" type="text" asp-for="UserName" value="" placeholder="Nome de usuário"/>
        </div>

        <div class="form-group">
            <label asp-for="PassWord">Senha:</label>
            <input class="form-control" type="password"  asp-for="PassWord" placeholder="Senha" value="" />
        </div>

        <input type="submit" name="Cadastrar" class="btn btn-info" value="CadastrarUsuario" />
    </fieldset>
</form>