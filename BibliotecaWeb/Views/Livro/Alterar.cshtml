@model Livro
 
<!DOCTYPE html>
<html>
<head>
    <title>Alterar Livro</title>
</head>

<body>
    <form asp-action="Alterar" asp-controller="Livro" method="post">
        <fieldset>
            <legend>Alterar Livro</legend>
            <label asp-for="Id">Id:</label>
            <input type="text" asp-for="Id" readonly />

            <label for="TxtTitulo">Título:</label>
            <input type="text" asp-for="Titulo" placeholder="Título" /> <br />

            <label for="TxtAutor">Autor:</label>
            <input type="text" asp-for="Autor" placeholder="Autor" /> <br />

            <label for="TxtEditora">Editora:</label>
            <input type="text" asp-for="Editora" placeholder="Editora" /> <br />

            <label for="TxtEdicao">Edição:</label>
            <input type="text" asp-for="Edicao" placeholder="Edição" /> <br />

            <label for="TxtPaginas">Número de páginas:</label>
            <input type="text" asp-for="NumPaginas" placeholder="Número de páginas" /> <br />

            <label for="TxtISBN">ISBN:</label>
            <input type="text" asp-for="Isbn" placeholder="ISBN" /> <br />

            <input type="submit" value="Salvar" />
        </fieldset>
    </form>
</body>
</html>
